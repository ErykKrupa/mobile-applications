    <ImageView
            android:layout_width="135dp"
            android:layout_height="131dp" app:srcCompat="@drawable/empty"
            android:id="@+id/imageViewTurn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonWithoutBot"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.7"/>
    <Button
            android:text="@string/runWithoutBot"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:background="#202010"
            android:id="@+id/buttonWithoutBot" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.9"
            android:onClick="runWithoutBot" app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:textColor="@android:color/white"/>
    <Button
            android:text="@string/runWithBot"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:background="#202010"
            android:id="@+id/buttonWithBot" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.95" app:layout_constraintVertical_bias="0.9"
            android:onClick="runWithBot" app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:textColor="@android:color/white"/>

