<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/hangman0"
            android:id="@+id/imageButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:padding="0dp"
            android:scaleType="fitCenter" app:layout_constraintHorizontal_bias="0.25"
            tools:ignore="ContentDescription"/>
    <TextView
            android:layout_width="415dp"
            android:layout_height="66dp"
            android:text=""
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp" android:textAlignment="center"
            android:id="@+id/wordTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.122" app:layout_constraintHorizontal_bias="0.059"/>
    <Button
            android:text="@string/reset"
            android:onClick="reset"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/button2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.963"
            app:layout_constraintVertical_bias="0.724"/>
    <EditText
            android:layout_width="56dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:text="a"
            android:ems="10"
            android:id="@+id/letterEditText"
            android:textColor="@android:color/holo_orange_dark"
            android:textAlignment="center"
            style="@style/Widget.AppCompat.EditText"
            android:maxLength="1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button" app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.866" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.378"
            tools:ignore="Autofill,HardcodedText,LabelFor"/>
    <Button
            android:text="@string/put"
            android:onClick="put"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.963"
            app:layout_constraintVertical_bias="0.368"/>




</android.support.constraint.ConstraintLayout>